{
  "permissions": {
    "allow": [
      "mcp__clawdbot-memory__memory_search",
      "mcp__clawdbot-memory__memory_get",
      "mcp__clawdbot-memory__memory_list"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["clawdbot-memory"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start.mjs"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/subagent-start.mjs"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-end.mjs"
          }
        ]
      }
    ]
  }
}
